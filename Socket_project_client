import  socket

client = socket.socket(socket.AF_INET, socket.SOCK_STREAM) # Create a TCP client socket (IPv4, stream-based)
host = socket.gethostname()               # Get the hostname of the server (in this case, your own machine)
port = 2376                              # Port number that the server is listening on
client.connect((host, port))            # Connect to the server

print("server is connected")
message = input("write  the  message :::")    # Ask the user to enter a message

client.send(message.encode())          # Send the message to the server
data = client.recv(1024)               # Receive the server's response (up to 1024 bytes)

print("Server send  :", data.decode()) # Print the response from the server

client.close()     # Close the client connection
